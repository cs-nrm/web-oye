---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CardNews from '../layouts/CardsHomeNews.astro';
import CardEntrevistas from '../layouts/CardsHomeEntrevistas.astro';
import SliderPodcast from '../layouts/SliderPodcast.astro';
import Separator from '../components/Separator.astro';
import HomeHeader from '../layouts/HomeHeader2.astro';
import DoubleBox from '../components/DoubleBox.astro';
import BoxBanner from '../components/BoxBanner.astro';
import LeaderBoard from'../components/LeaderBoard.astro';
import SuperLeader from '../components/SuperLeader.astro';
import BillBoard from '../components/BillBoard.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import SliderPromociones from '../layouts/SliderPromociones.astro';

---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} seccion="Home" description={SITE_DESCRIPTION} />		
	</head>
	<body>
		<Header title={SITE_TITLE} />
		
		<main id="home">
				<heade>
					<HomeHeader />
				</header>
				<LeaderBoard />
				<section>
					<div class="container-home lg:my-12 mx-auto">
						<h1 class="py-4 font-bold text-4xl md:text-5xl lg:text-4xl xl:text-5xl [text-shadow:2px_4px_2px_rgb(88_29_135_/_64%)]">Promociones</h1>
						<div class="flex flex-wrap">
							<div class="w-full lg:w-2/3">
								<SliderPromociones />
							</div>
							<div class="w-full mt-8 lg:w-1/3 lg:m-0 content-center">
							<DoubleBox />
							</div>
						</div>

					</div>
				</section>
				<Separator />
				<secttion>
					<div class="container-home px-4 my-12 mx-auto">
						<div class="flex flex-wrap">
							<div class="w-full lg:w-2/3">
								<h1 class="py-4 font-bold text-4xl md:text-5xl lg:text-4xl xl:text-5xl [text-shadow:2px_4px_2px_rgb(88_29_135_/_64%)]">Pop News</h1>
								<CardNews />
							</div>
							<div class="w-full lg:w-1/3 bg-purple-300 rounded">
								<h1 class="py-4 font-bold text-4xl md:text-5xl lg:text-4xl xl:text-5xl text-center [text-shadow:2px_4px_2px_rgb(88_29_135_/_64%)]">Entrevistas</h1>
								<CardEntrevistas />
							</div>
						</div>
						<SuperLeader />
					</div>
				</secttion>
					<Separator />
				<section>
					<div class="container-home w-full mx-auto">
						<h1 class="py-4 font-bold text-4xl md:text-5xl lg:text-4xl xl:text-5xl [text-shadow:2px_4px_2px_rgb(88_29_135_/_64%)]">Podcast</h1>
						<SliderPodcast />
					</div>
				</section>
				<BillBoard />
					

     			</div>

		</main>
		
		<Footer />
	</body>
		

</html>
