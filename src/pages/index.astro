---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CardNews from '../layouts/CardsHomeNews.astro';
import CardEntrevistas from '../layouts/CardsHomeEntrevistas.astro';
import SliderPodcast from '../layouts/SliderPodcast.astro';


import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} seccion="Home" description={SITE_DESCRIPTION} />
		
	</head>
	<body>
		<Header title={SITE_TITLE} />
		
		<main id="home">
				<header>
					<div class="relative min-h-[310px] md:min-h-[500px]" id="infoprog">
						<div class= "md:container mx-auto flex  md:justify-around items-center md:items-center" >
							<div class="items-center text-center md:text-left">
								<label class="text-white p-1 rounded bg-teal-600/[0.6] shadow-xl">AHORA EN VIVO</label>
								<div class="text-white font-bold [text-shadow:2px_4px_2px_rgb(88_29_135_/_64%)] w-12/12 md:w-9/12" id="nombreprog">Oye 89.7FM</div>
							</div>
							<div id="imgprog"><img src="https://storage.googleapis.com/nrm-web/oye/recursos/oye-back.png" /></div>
						</div>
						<div id="big-play" class="z-10 absolute top-2/4 left-2/4 -translate-y-2/4 -translate-x-2/4 border-2 rounded-full border-white cursor-pointer">
							<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-player-play" width="65" height="65" viewBox="0 0 24 24" stroke-width="1.5" stroke="#fff" fill="none" stroke-linecap="round" stroke-linejoin="round">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
								<path d="M7 4v16l13 -8z" />
						  	</svg>
						</div>
					</div>
				</header>

				<div class="container my-12 mx-auto">
					<div class="flex flex-wrap">
						<div class="w-full lg:w-2/3">
							<h1 class="p-4 font-bold text-4xl md:text-5xl lg:text-4xl xl:text-5xl [text-shadow:2px_4px_2px_rgb(88_29_135_/_64%)]">Pop News</h1>
                    		<CardNews />
						</div>
						<div class="w-full lg:w-1/3 bg-purple-300">
							<h1 class="p-4 font-bold text-4xl md:text-5xl lg:text-4xl xl:text-5xl text-center [text-shadow:2px_4px_2px_rgb(88_29_135_/_64%)]">Entrevistas</h1>
							<CardEntrevistas />
						</div>
						<div class="w-full">
							<h1 class="p-4 font-bold text-4xl md:text-5xl lg:text-4xl xl:text-5xl [text-shadow:2px_4px_2px_rgb(88_29_135_/_64%)]">Podcast</h1>
							<SliderPodcast />
						</div>
					</div>

     			</div>


				{ /*
				posts.map((post:any) => (
					<h2 set:html={post.title.rendered} />
					<p set:html={post.content.rendered} />
					<p set:html={post.acf.ds} />
				))
				*/	}
		</main>
		
		<Footer />
	</body>
		

</html>
