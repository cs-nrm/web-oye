    h2{
        font-weight: bold;
        text-align: center;
    }
    h4{
        color: #570757;
        font-weight: bold;
        text-align: center;
        font-size: 120%;
    }

    p{
        color: #570757;
        text-align: center;
    }

    img {
        position: absolute;
        left: 20%;
        top: 0%;
        width: 50%;
        transform: translateX(calc(var(--hover) * -15%))
        scale(calc(1 + (var(--hover) * 0.2)));
        transition: transform 0.2s;
        mask-image: linear-gradient(black:80%, transparent);
    }

    article {
    --hover: 0;
    }

    article:hover {
    --hover: 1;
    }
</style>