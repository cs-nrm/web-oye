---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Cards from '../../layouts/Cards.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
const res = await fetch("https://oyedigital.mx/wp-json/wp/v2/posts?_embed&per_page=20&categories=1616,1606&_fields[]=title&_fields[]=yoast_head_json");
const posts = await res.json();
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		
	</head>
	<body>
		<Header title={SITE_TITLE} />
		
		<main>
            <div class="container mx-auto">
				{
				posts.map((post) => (
						<!--a href={`/blog/${post.slug}/`}>
							<img width={720} height={360} src={post.yoast_head_json.og_image[0].url} alt="" />
							<h4 class="title">{post.title.rendered}</h4>
						</a-->
				
                    <Cards
                        imagePath={post.yoast_head_json.og_image[0].url}
                        altText="l"
						age={233}
                        name={post.title.rendered}
                    />


                ))
				}
				
            </div>
		</main>
		<Footer />
	</body>
</html>
