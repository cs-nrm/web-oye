---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';

import Layout from '../../../layouts/Layoutq.astro';
import Card from '../../../layouts/CardsPodcast.astro';

export function getStaticPaths() {
    
  return [
    {params: {podcast: 'al-otro-lado-de-la-radio', nodo: '6806'}},
    {params: {podcast: 'pop-trends', nodo: '6581'}},
    {params: {podcast: 'respira', nodo: '6734'}},
    {params: {podcast: 'top-gaming', nodo: '3801'}},
    {params: {podcast: 'top-tech', nodo: '3813'}},
    {params: {podcast: 'tu-fandom', nodo: '3788'}},
    {params: {podcast: 'el-debraye', nodo: '3449'}},
  ];
}
const { nodo, podcast } = Astro.params;
const res = await fetch("http://oyedigital.mx/wp-json/wp/v2/posts?_embed&per_page=10&categories="+nodo); 
const posts = await res.json();
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} seccion="Podcast" description={SITE_DESCRIPTION} />
		 <meta charset="utf-8"/>
	</head>
	<body>
		<Header title={SITE_TITLE} />
		
		<main>
            <div class="container my-12 mx-auto">
				<h1 class="p-4 font-bold [text-shadow:2px_4px_2px_rgb(88_29_135_/_64%)]">{podcast}</h1>
        <div>{nodo}</div>
                <Layout title="Eventos">
                    <section class="flex flex-wrap -mx-4">
                        {
                            posts.map((post:any) => ( 
                                <>
                                    <Card {post} />
                                </>
                            ))
                        }
                    </section>
                    <div class="text-center mt-20">
                        <a href="/eventos/2">
                        <button class="group relative h-8 w-36 overflow-hidden rounded-lg bg-gray-100 text-base shadow">
                            <div class="absolute inset-0 w-3 bg-pink-600 transition-all duration-[250ms] ease-out group-hover:w-full"></div>
                            <span class="relative text-black group-hover:text-white">Siguiente</span>
                        </button>
                        </a>
                    </div>
                </Layout>
            </div>
		</main>
		<Footer />
	</body>
</html>