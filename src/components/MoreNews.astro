---
import Card from '../layouts/CardMoreNews.astro';

const res = await fetch("https://contenido.oyedigital.mx/wp-json/wp/v2/posts?_embed&per_page=5&_fields=title,slug,yoast_head_json,categories&categories=149");
const posts = await res.json();
---
<div class="my-12 mx-auto">
	<h4 class="font-bold text-white ">Te podría interesar...</h4>
        <section class="flex flex-wrap -mx-1 lg:-mx-4">
                    {
                        posts.map((post:any) => ( 
                        <>
                        <Card {post} />
                        </>
                        ))
                    }
        </section>
    <div class="text-center">
        <a href="/popnews/">
            <button class="button-49" role="button">Ver más</button>
        </a>
    </div>
</div>
