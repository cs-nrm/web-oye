---
import Card from '../layouts/CardMoreNews.astro';

const res = await fetch("https://contenido.oyedigital.mx/wp-json/wp/v2/posts?_embed&per_page=5&_fields=title,slug,yoast_head_json,categories&categories=149");
const posts = await res.json();
---
<div class="my-12 mx-auto">
	<h4 class="font-bold">Te podría interesar...</h4>
        <section class="flex flex-wrap -mx-1 lg:-mx-4">
                    {
                        posts.map((post:any) => ( 
                        <>
                        <Card {post} />
                        </>
                        ))
                    }
        </section>
    <div class="text-center mt-20">
        <a href="/popnews/">
            <button class="group relative h-8 w-36 overflow-hidden rounded-lg bg-gray-100 text-base shadow">
                <div class="absolute inset-0 w-3 bg-pink-600 transition-all duration-[250ms] ease-out group-hover:w-full"></div>
                    <span class="relative text-black group-hover:text-white">Más</span>
            </button>
        </a>
    </div>
</div>
