---


export interface Props {
    post: {
      imagePath: string;
      title: {
         rendered: string;
      }
      content: string;
      slug: string;
      yoast_head_json: {
         og_image: [
            {
               url: string;
            }
         ]
         article_published_time: string;
         author:string;
      }
    };
}

const { post } = Astro.props;
---

<div class="card w-full">
    <article class="overflow-hidden rounded-lg shadow-lg">
        <a href={`/quickys/${post.slug}/`}>
            <img class="block h-auto w-full" src={post.yoast_head_json.og_image[0].url} alt={post.title.rendered} />
        </a>
        <header class="flex items-center justify-between leading-tight p-2 md:p-4">
            <h1 class="text-lg">
                <a class="no-underline hover:underline text-black" href={`/quickys/${post.slug}/`}>
                    {post.title.rendered}
                </a>
            </h1>
        </header>
        <footer class="flex items-center justify-between leading-none p-2 md:p-4">
            <div class="text-grey-darker text-sm">
                <p class="ml-2 text-sm">{post.yoast_head_json.author}</p>
            </div>
            <div class="text-grey-darker text-sm">
                <span class="hidden">Like</span>
                {post.yoast_head_json.article_published_time.substring(0, 10)}
            </div>
        </footer>
    </article>
</div>
