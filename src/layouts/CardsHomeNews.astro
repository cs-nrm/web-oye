---
import Layout from './Layoutq.astro';
import DoubleBox from '../components/DoubleBox.astro';
import BoxBanner from '../components/BoxBanner.astro';
import LeaderBoard from'../components/LeaderBoard.astro';
import SuperLeader from '../components/SuperLeader.astro';


const res = await fetch("http://oyedigital.mx/wp-json/wp/v2/posts?_embed&per_page=3&_fields[]=title&_fields[]=yoast_head_json&categories=149");
const posts = await res.json();

---

<div class="flex flex-wrap items-center mb-16">
    <div class="w-full sm:w-1/3">
        <img class="block h-auto w-full shadow-[0_2px_12px_7px_rgba(0,0,0,0.4)] rounded object-fill" src={posts[0].yoast_head_json.og_image[0].url} alt={posts[0].title.rendered} />
    </div>
    <div class="w-full sm:w-2/3 px-4">
        <p class="font-bold leading-snug m-0 text-xl lg:text-2xl text-center sm:text-left" set:html={posts[0].title.rendered}></p>
    </div>
</div>
<div class="flex flex-wrap items-center mb-16">
    <div class="w-full sm:w-1/3">
        <img class="block h-auto w-full shadow-[0_2px_12px_7px_rgba(0,0,0,0.4)] rounded object-fill" src={posts[1].yoast_head_json.og_image[0].url} alt={posts[1].title.rendered} />
    </div>
    <div class="w-full sm:w-2/3 px-4">
        <p class="font-bold leading-snug m-0 text-xl lg:text-2xl text-center sm:text-left" set:html={posts[1].title.rendered}></p>
    </div>
</div>
<div class="flex flex-wrap items-center mb-16">
    <div class="w-full sm:w-1/3">
        <img class="block h-auto w-full rounded shadow-[0_2px_12px_7px_rgba(0,0,0,0.4)] object-fill" src={posts[2].yoast_head_json.og_image[0].url} alt={posts[2].title.rendered} />
    </div>
    <div class="w-full sm:w-2/3 px-4">
        <p class="font-bold leading-snug m-0 text-xl lg:text-2xl text-center sm:text-left" set:html={posts[2].title.rendered}></p>
    </div>
</div>

